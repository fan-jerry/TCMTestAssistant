# 中医学习平台环境配置示例
# 复制此文件为 .env 并修改相应配置

# 基础配置
APP_NAME=中医学习平台
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=tcm_learning
MYSQL_USER=tcm_user
MYSQL_PASSWORD=your_strong_password
MYSQL_ROOT_PASSWORD=your_root_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=86400
JWT_REFRESH_TOKEN_EXPIRES=2592000

# 文件上传配置
UPLOAD_FOLDER=/www/wwwroot/tcm-learning/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,mp4,mp3

# 邮件配置
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# 支付配置
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=
ALIPAY_SANDBOX=true

WECHAT_PAY_APP_ID=
WECHAT_PAY_MCH_ID=
WECHAT_PAY_API_KEY=

# 第三方服务配置
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET_NAME=
QINIU_DOMAIN=

# 短信服务配置
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_SMS_SIGN_NAME=
ALIYUN_SMS_TEMPLATE_CODE=

# 安全配置
SECRET_KEY=your_secret_key_here
SECURITY_PASSWORD_SALT=your_password_salt
WTF_CSRF_SECRET_KEY=your_csrf_secret

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=/www/wwwroot/tcm-learning/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# 缓存配置
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# API限流配置
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# 会员配置
VIP_MONTHLY_PRICE=29.90
VIP_YEARLY_PRICE=299.00
VIP_TRIAL_DAYS=7

# 系统配置
USER_REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=false
DEFAULT_USER_LEVEL=1

# 性能配置
MYSQL_POOL_SIZE=10
MYSQL_MAX_OVERFLOW=20
REDIS_CONNECTION_POOL_SIZE=10

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 备份配置
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/www/backup/tcm-learning

# Docker部署配置
COMPOSE_PROJECT_NAME=tcm-learning
DOCKER_RESTART_POLICY=unless-stopped
